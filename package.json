{
    "name": "coreutilsts",
    "version": "1.0.0",
    "description": "Library with some utility functions",
    "main": "dist/lib/index.js",
    "types": "dist/lib/index.d.ts",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "test": "jest --coverage --detectOpenHandles",
        "clean": "tsc --build --clean && rm -rf coverage && rm -rf package && rm -rf coreutilsts-*",
        "check:format": "prettier --check .",
        "check:lint": "eslint",
        "format": "prettier --write .",
        "lint": "tsc --noEmit && eslint --fix",
        "verify": "npm run clean && npm run format && git add . && npm run check:format && npm run check:lint && npm run test && npm run clean",
        "prepare": "husky",
        "package": "npm run build && npm pack"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sanyokkua/CoreUtilsTS.git"
    },
    "keywords": [
        "typescript"
    ],
    "author": "Oleksandr Kostenko",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/sanyokkua/CoreUtilsTS/issues"
    },
    "homepage": "https://github.com/sanyokkua/CoreUtilsTS#readme",
    "devDependencies": {
        "@types/file-saver": "^2.0.7",
        "@types/jest": "^29.5.14",
        "@typescript-eslint/eslint-plugin": "^8.26.0",
        "@typescript-eslint/types": "^8.26.0",
        "eslint": "^9.21.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "ts-jest": "^29.2.6",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.0"
    },
    "dependencies": {
        "copy-to-clipboard": "^3.3.3",
        "file-saver": "^2.0.5"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "consistent",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always",
        "proseWrap": "preserve",
        "plugins": [
            "prettier-plugin-organize-imports"
        ]
    },
    "files": [
        "dist/src",
        "README.md"
    ]
}
